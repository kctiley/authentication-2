extends layout

block content
  h1= title
  h2= subtitle
  include error.jade
  if user
    form(name='submitSignIn', id='submitSignIn', action='/signin', method="post")
      p Email:
      p
        input(name= 'inputEmail', id= 'inputEmail')

      p Password:
      p
        input(name= 'inputPassword', id= 'inputPassword')
      p
        button(type= 'submit') Sign In
  else
    form(name='submitSignUp', id='submitSignUp', action='/signup', method="post")
      p Email:
      p
        input(name= 'inputEmail', id= 'inputEmail')

      p Password:
      p
        input(name= 'inputPassword', id= 'inputPassword')
      p
        button(type= 'submit') Sign Up
